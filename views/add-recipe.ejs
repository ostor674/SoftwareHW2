<%- include('partials/head') %>  
<body>
    <header>
        <h1>Add a New Recipe</h1>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/recipe-list">Recipe List</a></li>
                <li><a href="/add-recipe" class="active">Add Recipe</a></li>
            </ul>
        </nav>
    </header>
    <hr>
    <form action="/add-recipe" method="POST">
        <label for="name">Recipe Name:</label>
        <input type="text" id="name" name="name" required><br>

        <label for="description">Description:</label>
        <textarea id="description" name="description" required></textarea><br>

        <label for="proteinType">Protein Type:</label>
        <select id="proteinType" name="proteinType" required>
            <% proteinTypes.forEach(function(protein) { %>
                <option value="<%= protein %>"><%= protein %></option>
            <% }); %>
        </select><br>

        <label for="ingredients">Ingredients:</label>
        <div id="ingredients">
            <% ingredients.forEach(function(ingredient) { %>
                <div>
                    <input type="checkbox" id="ingredient-<%= ingredient.id %>" name="ingredients" value="<%= ingredient.id %>">
                    <label for="ingredient-<%= ingredient.id %>"><%= ingredient.name %></label>
                </div>
            <% }); %>
        </div><br>

        <label for="instructions">Instructions (separate steps with line breaks):</label>
        <textarea id="instructions" name="instructions" required></textarea><br>

        <button type="submit">Add Recipe</button>
    </form>

    <%- include('partials/footer') %>  
</body>
</html>
